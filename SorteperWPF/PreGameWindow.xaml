<Window x:Class="SorteperWPF.PreGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SorteperWPF"
        mc:Ignorable="d"
        Title="PreGameWindow" Height="450" Width="800">
    <StackPanel>
        <Label Margin="40" HorizontalContentAlignment="Center" FontSize="40">Choose the amout of players</Label>
        <Button x:Name="B2Player" Margin="10" Width="50" Height="30" Click="Button_Click">2 Players</Button>
        <Button x:Name="B3Player" Margin="10" Width="50" Height="30" Click="Button_Click_1">3 Players</Button>
        <Button x:Name="B4Player" Margin="10" Width="50" Height="30" Click="Button_Click_2">4 Players</Button>
        <TextBox x:Name="NameBox" Height="23" Width="200" TextWrapping="Wrap" KeyDown="OnKeyDownHandler" Text="Insert name" Visibility="Hidden"></TextBox>
        <Button x:Name="Submit" Margin="10" Width="50" Height="30" Click="Submit_Click" Visibility="Hidden">Submit</Button>
        <Button x:Name="StartButton" Margin="10" Width="50" Height="30" Click="StartButton_Click" Visibility="Hidden">Start</Button>
        <StackPanel x:Name="PlayerNames" Orientation="Horizontal" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
